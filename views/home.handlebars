<section class="has-background-dark">
  <div class="hero-body is-full ">
    <div class="columns">
    
      <div class="column">
        <p class="title has-text-primary">
            Welcome to Tech Blog-Topia!
       </p>
        <p class="subtitle has-text-light ml-6 ">
            - the most bloggingest 
            <strong class="has-text-danger">"Topia"</strong> 
            you'll ever visit!
        </p>

      </div>

      <div class="column">

    <div class="tile is-parent">
      <article class="tile is-child notification is-danger border border-4 border-dark">
        <p class="title">## Lets Talk Tech</p>
        <div class="content">
      </div>
    </div>  


    <div class="tile is-parent">
      <article class="tile is-child notification is-primary border border-4 border-dark">
        <p class="title has-text-dark">Recent Posts</p>
          {{#each blogs as |blog|}}
        <div class="content">
          <h5> {{blog.name}} </h5>
          <div class="box has-background-danger has-text-white border border-4 border-dark">
            <h6>{{blog.comment}}</h6>
            <strong>written by: {{user.name}}</strong>
          </div>  
      </div>
              {{/each}}
    </div>  
  </div>


</section>






